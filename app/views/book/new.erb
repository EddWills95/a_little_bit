<%= stylesheet_link_tag 'style' %>

<% form_for @book, url_for(:book, :create), method: 'POST' do |f| %>
	
		<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :author %>
	<%= f.select(:author_id, :collection => @authors, :fields => [:full_name, :id]) %>

	<%= f.label :blurb %>
	<%= f.text_field :blurb %> 

	<%= f.label :ebook_price %>
	<%= f.number_field :ebook_price %>

	<%= f.label :paper_price %>
	<%= f.number_field :paper_price %>

	<%= f.label :pages %>
	<%= f.number_field :pages %>

	<%= f.label :coverImg %>
	<%= f.text_field :coverImg %>

	<%= f.label :bannerImg %>
	<%= f.text_field :bannerImg %>

	<%= f.submit %>	

<% end %>